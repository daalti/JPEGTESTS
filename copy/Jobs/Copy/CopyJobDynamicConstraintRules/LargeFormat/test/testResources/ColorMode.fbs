namespace dune.imaging.types;

/**< Scanning color mode - included Auto detection
 *   @note Auto has two modes for what the mono page data should be treated as.
 *   @note AUTO_COLORANDGRAY with optimize mono pages for grayscale, while
 *   @note AUTO_COLORANDBLACK with optimize mono pages for 1-bit
 */
enum ColorMode:byte
{
    AUTODETECT = 0,
    MONOCHROME,         // TONER BLACK
    COLOR,              // COLOR
    GRAYSCALE,          // COMPOSITE BLACK
    BLACKANDWHITE,      // 1-bit
    AUTO_COLORANDGRAY,  // comments about use below
    AUTO_COLORANDBLACK, // comments about use below
    GRAYSCALE_AUTODETECT, //Used by homesmb engines to determine use grayscale k only or grayscale composite
    TRUE_BLACK,          // added for BEAM 
}
